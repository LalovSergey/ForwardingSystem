<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".two_page">

    <Button
        android:id="@+id/btn_check"
        android:layout_width="370dp"
        android:layout_height="80dp"
        android:text="Проверить содержимое хранилища"
        app:layout_constraintBottom_toTopOf="@+id/btn_shipment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.609"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.932" />

    <Button
        android:id="@+id/btn_shipment"
        android:layout_width="370dp"
        android:layout_height="80dp"
        android:layout_marginBottom="12dp"
        android:text="Перейти в список поставок"
        app:layout_constraintBottom_toTopOf="@+id/btn_total"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.609"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_total"
        android:layout_width="370dp"
        android:layout_height="80dp"
        android:layout_marginBottom="124dp"
        android:text="Итоговая информация по статусам"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.609"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>